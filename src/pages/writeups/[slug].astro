          });
        }
      });
    };
    
    // Set up triggers initially
    setupToolTriggers();
    
    // Re-scan for triggers if content changes (for dynamic content)
    const observer = new MutationObserver(setupToolTriggers);
    observer.observe(contentContainer, { childList: true, subtree: true });
  }

