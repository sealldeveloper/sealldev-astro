---
export interface Props {
  id: string;
  title: string;
  altBackground?: boolean;
  bgColorOverride?: string;
}
const { title, id, altBackground, bgColorOverride } = Astro.props;

// Generate an inline style if needed
let inlineStyle = "";
if (altBackground) {
  inlineStyle = `background-color: var(--color-background-offset);`;
} else if (bgColorOverride) {
  inlineStyle = `background-color: ${bgColorOverride};`;
}
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8 px-8 py-16"
  style={inlineStyle}
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
