---
// WriteupMeta.astro - Component for displaying the meta information with proper formatting
const { entry } = Astro.props;

// Function to format description text with proper styling
function formatDescription(description) {
  if (!description) return '';
  
  // Replace inline code blocks (wrapped in backticks) with proper HTML
  let formatted = description.replace(/`([^`]+)`/g, '<code>$1</code>');
  
  // Replace newlines with <br> tags for proper line breaks
  formatted = formatted.replace(/\n/g, '<br />');
  
  return formatted;
}
---

<div class="writeup-meta">
  <h2>Description</h2>
  <p set:html={formatDescription(entry.data.description)}></p>
</div>

